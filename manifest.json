{
  "manifest_version": 3,
  "name": "ChatGPT Cosmo (Purely Cosmetic)",
  "version": "1.0.0",
  "description": "Visual polish for chatgpt.com: gradients, glass, glow â€” no data, no tracking.",
  "action": { "default_title": "ChatGPT Cosmo", "default_popup": "popup.html" },
  "permissions": ["storage"],
  "host_permissions": ["https://chatgpt.com/*"],
  "content_scripts": [
    {
      "matches": ["https://chatgpt.com/*"],
      "run_at": "document_start",
      "css": [
        "styles/01-tokens.css",
        "styles/02-canvas.css",
        "styles/03-sidebar.css",
        "styles/04-components.css",
        "styles/05-accessibility.css",
        "styles/06-scrollbars.css",
        "styles/07-variants.css",
        "styles/08-composer.css",
        "styles/09-utilities.css"
      ],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["webp/*.webp"],
      "matches": ["https://chatgpt.com/*"]
    }
  ]
}


